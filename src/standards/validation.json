{
  "messages": {
    "required": "{field} wajib diisi",
    "requiredEn": "{field} is required",
    "email": "Format email tidak valid",
    "emailEn": "Please enter a valid email address",
    "minLength": "{field} minimal {min} karakter",
    "minLengthEn": "{field} must be at least {min} characters",
    "maxLength": "{field} maksimal {max} karakter",
    "maxLengthEn": "{field} must be at most {max} characters",
    "min": "{field} minimal {min}",
    "minEn": "{field} must be at least {min}",
    "max": "{field} maksimal {max}",
    "maxEn": "{field} must be at most {max}",
    "pattern": "Format {field} tidak valid",
    "patternEn": "{field} format is invalid",
    "unique": "{field} sudah terdaftar",
    "uniqueEn": "{field} already exists",
    "numeric": "{field} harus berupa angka",
    "numericEn": "{field} must be a number",
    "integer": "{field} harus berupa bilangan bulat",
    "integerEn": "{field} must be an integer",
    "positive": "{field} harus bernilai positif",
    "positiveEn": "{field} must be positive",
    "date": "Format tanggal tidak valid",
    "dateEn": "Invalid date format",
    "dateAfter": "{field} harus setelah {date}",
    "dateAfterEn": "{field} must be after {date}",
    "dateBefore": "{field} harus sebelum {date}",
    "dateBeforeEn": "{field} must be before {date}",
    "url": "Format URL tidak valid",
    "urlEn": "Please enter a valid URL",
    "fileSize": "Ukuran file maksimal {max}",
    "fileSizeEn": "File size must be at most {max}",
    "fileType": "Tipe file tidak didukung",
    "fileTypeEn": "File type not supported"
  },
  "patterns": {
    "email": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
    "phone": "^\\+?[1-9]\\d{1,14}$",
    "phoneIndonesia": "^(\\+62|62|0)8[1-9][0-9]{6,10}$",
    "url": "^https?:\\/\\/.+",
    "slug": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
    "alphanumeric": "^[a-zA-Z0-9]+$",
    "alpha": "^[a-zA-Z]+$",
    "numeric": "^[0-9]+$",
    "decimal": "^[0-9]+\\.?[0-9]*$",
    "currency": "^[0-9]{1,3}(\\.[0-9]{3})*(,[0-9]{2})?$",
    "nik": "^[0-9]{16}$",
    "npwp": "^[0-9]{15}$",
    "postalCode": "^[0-9]{5}$",
    "creditCard": "^[0-9]{13,19}$",
    "uuid": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
  },
  "passwordPolicy": {
    "minLength": 8,
    "maxLength": 128,
    "requireUppercase": true,
    "requireLowercase": true,
    "requireNumber": true,
    "requireSpecial": false,
    "specialCharacters": "!@#$%^&*()_+-=[]{}|;:,.<>?",
    "disallowCommon": true,
    "disallowUsername": true,
    "historyCount": 5,
    "expiryDays": 90
  },
  "usernamePolicy": {
    "minLength": 3,
    "maxLength": 50,
    "allowedCharacters": "alphanumeric, underscore, dot, hyphen",
    "pattern": "^[a-zA-Z][a-zA-Z0-9._-]*$",
    "reservedNames": ["admin", "administrator", "root", "system", "api", "www"]
  },
  "fieldConstraints": {
    "name": {
      "minLength": 2,
      "maxLength": 100
    },
    "description": {
      "maxLength": 1000
    },
    "shortDescription": {
      "maxLength": 255
    },
    "email": {
      "maxLength": 255
    },
    "phone": {
      "minLength": 10,
      "maxLength": 15
    },
    "address": {
      "maxLength": 500
    },
    "notes": {
      "maxLength": 2000
    },
    "code": {
      "minLength": 2,
      "maxLength": 50
    },
    "sku": {
      "minLength": 3,
      "maxLength": 50
    }
  },
  "fileValidation": {
    "image": {
      "maxSize": "5MB",
      "allowedTypes": ["image/jpeg", "image/png", "image/gif", "image/webp"],
      "maxDimensions": {
        "width": 4096,
        "height": 4096
      }
    },
    "document": {
      "maxSize": "10MB",
      "allowedTypes": ["application/pdf", "application/msword", "application/vnd.openxmlformats-officedocument.wordprocessingml.document"]
    },
    "spreadsheet": {
      "maxSize": "10MB",
      "allowedTypes": ["application/vnd.ms-excel", "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet", "text/csv"]
    }
  },
  "sanitization": {
    "trimWhitespace": true,
    "removeHtml": true,
    "escapeSpecialChars": true,
    "normalizeWhitespace": true,
    "lowercaseEmail": true
  }
}
